<h1> Modifier l'appartement <%=@flat.title%> </h1>
<%= link_to "Retour", :back %>
<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= simple_form_for @flat do |f| %>

        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :city %>
        <%= f.input :availability %>
        <%= f.input :capacity %>
        <%= f.input :price %>
        <%= f.label :picture %>
        <%= f.file_field :picture %>

        <%= f.button :submit, class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
